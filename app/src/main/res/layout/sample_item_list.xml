<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_5sdp"
    android:elevation="@dimen/_2sdp"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/_160sdp"
            android:id="@+id/ivCategoryView"
            android:layout_height="@dimen/_160sdp"
            android:src="@color/accent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samosa"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/ivCategoryView"
            app:layout_constraintEnd_toEndOf="@id/ivCategoryView"
            app:layout_constraintTop_toBottomOf="@id/ivCategoryView"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>